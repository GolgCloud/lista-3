using System;

class Program
{
    static void Main()
    {
        Console.Write("Digite um número de ponto flutuante: ");
        float numero = float.Parse(Console.ReadLine());

        if (numero == 0)
        {
            Console.WriteLine("O número é igual a zero.");
        }
        else
        {
            Console.WriteLine("O número não é igual a zero.");
        }
    }
}
